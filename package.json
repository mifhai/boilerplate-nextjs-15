{
  "name": "nextjs-v15-boilerplate",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=22",
    "npm": ">=10.9",
    "pnpm": "please-use-npm",
    "yarn": "please-use-npm"
  },
  "scripts": {
    "postinstall": "next telemetry --disable",
    "dev": "next telemetry --disable && next dev --turbopack --port 3000",
    "build": "next telemetry --disable && next build --turbopack",
    "start": "next telemetry --disable && next start --port 8000",
    "lint": "next telemetry --disable && next lint",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit --pretty",
    "packages:update": "npx npm-check-updates --interactive --format group",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@mantine/core": "8.2.7",
    "@mantine/hooks": "8.2.7",
    "@sindresorhus/is": "7.0.2",
    "@tanstack/react-query": "5.85.5",
    "@tanstack/react-query-devtools": "5.85.5",
    "clsx": "2.1.1",
    "dot-prop": "9.0.0",
    "ky": "1.9.1",
    "modern-errors": "7.1.2",
    "next": "15.5.9",
    "path-to-regexp": "8.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.19.0",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "15.5.2",
    "@secretlint/secretlint-rule-preset-recommend": "11.2.0",
    "@storybook/addon-docs": "9.1.17",
    "@storybook/nextjs-vite": "9.1.17",
    "@tailwindcss/postcss": "^4",
    "@tanstack/eslint-plugin-query": "5.83.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-better-tailwindcss": "3.7.6",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-storybook": "9.1.3",
    "lint-staged": "16.1.5",
    "postcss": "8.5.6",
    "postcss-preset-mantine": "1.18.0",
    "postcss-simple-vars": "7.0.1",
    "secretlint": "11.2.0",
    "simple-git-hooks": "2.13.1",
    "storybook": "9.1.17",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
